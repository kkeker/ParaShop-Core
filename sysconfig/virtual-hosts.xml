        <rewrite condition="-f{OR}.*\.do.*" target="" flag="L" />
        <rewrite condition="^/(.*\.css)$" target="/.tmp/$1" flag="L" />
        <rewrite condition="^/(.*)$" target="/app/$1" flag="L" />
    </rewrites>
    </virtualHost-->
    <virtualHost name="localhost">
        <params>
            <param name="documentRoot" type="string">webapps/myapp</param>
        </params>
        <rewrites>
            <rewrite condition="-f{OR}.*\.do.*" target="" flag="L" />
            <rewrite condition="^/(.*\.css)$" target="/.tmp/$1" flag="L" />
            <rewrite condition="^/(.*)$" target="/app/$1" flag="L" />
        </rewrites>
    </virtualHost>

</virtualHosts>
